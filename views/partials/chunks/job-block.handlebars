<div class="col-md-3 d-flex p-2">

	<div class="card" 
		data-id="{{_id}}" 
		data-linkedinID="{{linkedinID}}" 
		data-saved="{{saved}}"
	>
		<div class="card-body d-flex flex-column">

			<h5 class="card-title">
			{{company}}
			</h5>

			<h6 class="card-subtitle mb-2 text-muted">
				<a target="_blank"
				href="{{link}}" 
				data-id="{{_id}}" 
				data-linkedinID="{{linkedinID}}" 
				data-saved="{{saved}}"
				>
				{{title}}
				</a>
			</h6>

			<p class="card-text">
			{{desc}}
			</p>

			{{#if saved}}
			<button class="update-unsave-job btn btn-warning" 
			data-id="{{_id}}" 
			data-linkedinID="{{linkedinID}}" 
			data-saved="{{saved}}"
			>
				Remove job
			</button>

			<button class="btn btn-primary job-notes" type="button" data-toggle="modal" data-target="#myModal" 
			data-id="{{_id}}" 
			data-linkedinID="{{linkedinID}}" 
			data-saved="{{saved}}"
			>
				Job notes
			</button>

			{{else}}
			<button class="update-save-job btn btn-outline-info mt-auto" 
			data-id="{{_id}}" 
			data-linkedinID="{{linkedinID}}" 
			data-saved="{{saved}}"
			>
			Save Job
			</button>
			{{/if}}

		</div>
	</div>





</div>