<div class="container">

  <header class="row">
    <div class="col-md-12">

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Developer Job Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item m-1">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item m-1 ">
              <a class="nav-link" href="/saved">Saved Jobs</a>
            </li>
            <li class="nav-item m-1">
              <button class="btn btn-info scrape-jobs">> SCRAPE NEW JOBS</button>
            </li>
            <li class="nav-item m-1">
              <button class="btn btn-danger delete-alljobs">> CLEAR JOBS</button>
            </li>
          </ul>
        </div>
      </nav>

    </div>
  </header>


  <br/>

  <section class="row">
    <div class="col-md-12 p-2">

      <div class="jumbotron text-center">
        <h1>Developer Job Scraper</h1>
        <h3>Craig Harshaw Edition</h3>
      </div>

    </div>
  </section>

  {{!--
  <br/> --}}

  <section class="row">
    {{#if jobs }} 
      {{#each jobs }} 
        {{> chunks/job-block this}} 
      {{/each}} 
    {{else}} 
     {{>chunks/no-jobs}} 
    {{/if}}
  </section>


  <!-- The Modal -->
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 id="" class="modal-title"></h4>
          {{!--
          <h4 class="modal-title">Note for: COMPANY / TITLE </h4> --}}
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
        </div>


        <!-- Modal body -->
        <div class="modal-body">

          <ul id="notesList">
            
          </ul>

          <form id="modal-form-id" class="modal-form" data-id="">
            <textarea id="" class="modal-input" name="note" form="noteForm" data-id=""></textarea>
            <button class="modal-button save-note btn btn-primary" data-id="" type="submit">
              Save note
            </button>
          </form>

        </div>


        <!-- Modal footer -->

      </div>
    </div>
  </div>